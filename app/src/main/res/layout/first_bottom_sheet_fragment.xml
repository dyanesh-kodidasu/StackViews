<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_bottom_sheet_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/landscape_swipe_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipe_up"
            android:textColor="@color/view_text_color"
            android:textSize="@dimen/view_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/view_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_view_title"
            android:textColor="@color/view_text_color"
            android:textSize="@dimen/view_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:gravity="center">

        <Button
            android:id="@+id/next_view_cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:background="@color/button_background_color"
            android:textColor="@color/button_text_color"
            android:text="@string/second_view_button"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>